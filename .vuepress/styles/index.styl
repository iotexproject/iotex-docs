@require '~vuepress-plugin-tabs/dist/themes/default.styl'
  
$accentColor = #3eaf7c
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34




body
  background rgb(250,250,250)

.navbar
  background rgb(1,22,39)
  color white
  height 4rem
  .site-name
    margin-left 1rem
    font-size 1rem
  .search-box
    input
      background-color rgb(5,27,45)
      border none
  .links
    background transparent !important
  .site-name
    color white

.sidebar
  width 14rem
  background rgb(250,250,250)
  padding-left 2rem  
  .sidebar-group-items
    >li>a.sidebar-link
      padding 1rem 0
      font-size 1rem
      font-weight bold
      color rgb(153,153,153)
      border none
      &.active
        font-weight 600
        color rgb(153,153,153)
  .sidebar-sub-headers
    padding 0
    a.sidebar-link
      padding 0
      color rgb(204,204,204)
      size 7rem
      font-weight bold
      line-height 3em
      display inline
      border-bottom 2px solid transparent
      &:hover
        font-weight 600
        color rgb(153,153,153)
      &.active
        padding-bottom .2rem
        border-bottom 3px solid rgb(0,180,160)
        font-weight 600
        color rgb(51,51,51)

.page
  margin-top 5rem
  div
    background #fff
  .content
    &:not(.custom) > *:first-child
      margin 0
      padding 0
    background #fff
    h2
      border none
    a
      color rgb(23,146,228)
    p
      color rgb(41,41,41)
    // li
    //   margin-left 1.5rem
    //   color rgb(102,102,102)
    code
      word-break break-word
    pre
      code 
        color rgb(41,41,41)
  .page-edit
    color rgb(153,153,153)
    .edit-link
      a
        color unset
    .prefix
      color unset
  .page-nav
    padding-bottom 1rem 
    .next,.prev
      background #00b4a0
      padding 0 .8rem
      height 3rem
      line-height 3rem
      border-radius 4px
      color #fff
      font-weight bold
      a
        font-weight bold
        color white
    .prev
      display inline-block


div[class*="language-"] pre, div[class*="language-"] pre[class*="language-"]
  background rgb(250,250,250)

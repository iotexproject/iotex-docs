@require '~vuepress-plugin-tabs/dist/themes/default.styl'

$accentColor = #3eaf7c
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34
html, body
  background rgb(250, 250, 250)
.navbar
  background rgb(1, 22, 39)
  color white
  height 4rem
  .site-name
    margin-left 1rem
    font-size 1rem
  .search-box
    input
      background-color rgb(5, 27, 45)
      border none
  .links
    background transparent !important
    .nav-link
      &:hover
        color $accentColor
    .router-link-active
      color $accentColor
  .site-name
    color white
.sidebar
  width 14rem
  background rgb(250, 250, 250)
  padding-left 2rem
  .sidebar-group-items
    >li>a.sidebar-link
      padding 1rem 0
      font-size 1rem
      font-weight bold
      color rgb(153, 153, 153)
      border none
      &.active
        font-weight 600
        color rgb(153, 153, 153)
  .sidebar-sub-headers
    padding 0
    a.sidebar-link
      padding 0
      color rgb(204, 204, 204)
      size 7rem
      font-weight bold
      line-height 3em
      display inline
      border-bottom 2px solid transparent
      &:hover
        font-weight 600
        color rgb(153, 153, 153)
      &.active
        padding-bottom 0.2rem
        border-bottom 3px solid rgb(0, 180, 160)
        font-weight 600
        color rgb(51, 51, 51)
.page
  margin-top 5rem
  div
    background #fff
  .content, .content__default
    &:not(.custom) > *:first-child
      margin 0
      padding 0
    background #fff
    h2
      border none
    a
      color rgb(23, 146, 228)
    p
      color rgb(41, 41, 41)
    // li
    // margin-left 1.5rem
    // color rgb(102,102,102)
    code
      word-break break-word
    pre
      code
        color #292929
  .page-edit
    background white
    color rgb(153, 153, 153)
    .edit-link
      a
        color unset
    .prefix
      color unset
  .page-nav
    padding-bottom 1rem
    .next, .prev
      background #00b4a0
      padding 0 0.8rem
      height 3rem
      line-height 3rem
      border-radius 4px
      color #fff
      font-weight bold
      a
        font-weight bold
        color white
    .prev
      display inline-block
.tabs-component
  div[class*='language-']
    margin 0
  .tabs-component-tabs
    border none
    align-items stretch
    display flex
    justify-content flex-start
    margin-bottom -1px
    .is-active
      border-bottom solid 1px #fff
      z-index 2
      transform translateY(0)
  .tabs-component-tab
    background-color #fff
    border solid 1px #ddd
    border-radius 3px 3px 0 0
    margin-right 0.25em
    transition transform 0.3s ease
  .tabs-component-panels
    border-top-left-radius 0
    background-color #fff
    border solid 1px #ddd
    border-radius 0 6px 6px 6px
    box-shadow 0 0 10px rgba(0, 0, 0, 0.05)
    padding 1em 1em
div[class*='language-'] pre, div[class*='language-'] pre[class*='language-']
  background rgb(250, 250, 250)
